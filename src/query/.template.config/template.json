{
    "$schema": "http://json.schemastore.org/template",
    "author": "Jeziel Moura",
    "classifications": [ "App", "Query" ],
    "identity": "Nett.Query",
    "name": "Nett Query Template",
    "shortName": "nett.query",
    "symbols": {
      "nameDerived":{
        "type": "derived",
        "valueSource": "name",
        "valueTransform": "removeSpaces",
        "replaces": "NameOverride",
        "fileRename": "NameOverride",
        "defaultValue": "Name"
      },
      "projectName": {
        "type": "parameter",
        "description": "Project name for the generated code",
        "replaces": "ProjectNameOverride"
      }
    },
    "forms": {
      "removeSpaces": {
        "identifier": "replace",
        "pattern": "\\ ",
        "replacement": ""
      }
    }
  }