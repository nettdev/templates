{
    "$schema": "http://json.schemastore.org/template",
    "author": "Net Dev",
    "classifications": [ "Common", "Clean Architecture", "Domain Drive Design" ],
    "identity": "Nett.Templates",
    "name": "Nett Dev Templates",
    "shortName": "nett.command",
    "symbols": {
      "commandName":{
        "type": "parameter",
        "description": "The name of Command code file and class.",
        "datatype": "text",
        "replaces": "SomeOperation",
        "fileRename": "SomeOperation",
        "defaultValue": "SomeOperation"
      },
      "aggregateName":{
        "type": "parameter",
        "description": "The name of Aggregate code file and class.",
        "datatype": "text",
        "replaces": "{Aggregate}",
        "fileRename": "{Aggregate}",
        "defaultValue": "Aggregate"
      },
      "removeValidator": {
        "type": "parameter",
        "description": "Include validator for command",
        "datatype": "bool",
        "defaultValue": "false",
        "displayName": "Remove validator"
      },
      "namespace": {
        "type": "parameter",
        "description": "Namespace for the generated code",
        "replaces": "NettDev.Namespace"
      }
    },
    "sources": [
      {
        "modifiers": [
          {
            "condition": "(removeValidator)",
            "exclude": [
              "SomeOperationValidator.cs"
            ]
          }
        ]
      }
    ]
  }