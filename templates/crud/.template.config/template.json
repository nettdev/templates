{
    "$schema": "http://json.schemastore.org/template",
    "author": "Jeziel Moura",
    "classifications": [ "App", "Crud" ],
    "identity": "Nett.Crud",
    "name": "Nett Crud Template",
    "shortName": "nett.crud",
    "symbols": {
      "nameDerived":{
        "type": "derived",
        "valueSource": "name",
        "valueTransform": "removeSpaces",
        "replaces": "NameOverride",
        "fileRename": "NameOverride",
        "defaultValue": "Name"
      },
      "valueObject":{
        "type": "parameter",
        "description": "The name of value object code file and class.",
        "datatype": "text",
        "replaces": "ValueObjectOverride",
        "fileRename": "ValueObjectOverride"
      },
      "enumeration":{
        "type": "parameter",
        "description": "The name of enumeration code file and class.",
        "datatype": "text",
        "replaces": "EnumerationOverride",
        "fileRename": "EnumerationOverride"
      },
      "projectName": {
        "type": "parameter",
        "description": "Project name for the generated code",
        "replaces": "ProjectNameOverride"
      },
      "nameField": {
        "type": "derived",
        "valueSource": "name",
        "valueTransform": "first_lc",
        "replaces": "NameFieldOverride"
      },
      "valueObjectField": {
        "type": "derived",
        "valueSource": "valueObject",
        "valueTransform": "first_lc",
        "replaces": "ValueObjectFieldOverride"
      },
      "enumerationField": {
        "type": "derived",
        "valueSource": "enumeration",
        "valueTransform": "first_lc",
        "replaces": "EnumerationFieldOverride"
      }
    },
    "sources": [
      {
        "modifiers": [
          {
            "condition": "(valueObjectOverride == \"\")",
            "exclude": [
              "src/Domain/NameOverrideAggregate/ValueObjectOverride.cs"
            ]
          },
          {
            "condition": "(enumerationOverride == \"\")",
            "exclude": [
              "src/Domain/NameOverrideAggregate/EnumerationOverride.cs"
            ]
          }
        ]
      }
    ],
    "forms": {
      "first_lc": {
        "identifier": "firstLowerCaseInvariant"
      },
      "removeSpaces": {
        "identifier": "replace",
        "pattern": "\\ ",
        "replacement": ""
      }
    }
  }