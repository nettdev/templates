{
    "$schema": "http://json.schemastore.org/template",
    "author": "Net Dev",
    "classifications": [ "App", "Endpoints" ],
    "identity": "Nett.Endpoint",
    "name": "Nett Endpoint Template",
    "shortName": "nett.endpoint",
    "symbols": {
      "nameOverride":{
        "type": "derived",
        "valueSource": "name",
        "valueTransform": "removeSpaces",
        "replaces": "NameOverride",
        "fileRename": "NameOverride",
        "defaultValue": "SomeName"
      },
      "projectName": {
        "type": "parameter",
        "description": "Project name for the generated code",
        "replaces": "ProjectNameOverride"
      }
    },
    "forms": {
      "removeSpaces": {
        "identifier": "replace",
        "pattern": "\\ ",
        "replacement": ""
      }
    }
  }